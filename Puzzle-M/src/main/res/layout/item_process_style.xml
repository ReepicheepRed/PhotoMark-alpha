<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:context="com.xiaopo.flying.photolayout.MainActivity">

    <TextView
        android:layout_width="@dimen/height_90_px"
        android:layout_height="@dimen/height_90_px"
        android:id="@+id/item_puzzle_color_tv"
        android:background="@android:color/white"
        android:visibility="gone"
        tools:visibility="visible"/>

    <FrameLayout
        android:layout_width="@dimen/height_106_px"
        android:layout_height="@dimen/height_106_px"
        android:id="@+id/item_puzzle_style_fl">

        <ImageView
            android:layout_width="@dimen/height_100_px"
            android:layout_height="@dimen/height_100_px"
            app:srcCompat="@mipmap/yangshi_icon_1_moren"
            android:id="@+id/item_puzzle_style_iv" />

        <ImageView
            android:layout_width="@dimen/height_106_px"
            android:layout_height="@dimen/height_106_px"
            app:srcCompat="@mipmap/_selected"
            android:id="@+id/item_puzzle_selected_iv" />
    </FrameLayout>
</LinearLayout>