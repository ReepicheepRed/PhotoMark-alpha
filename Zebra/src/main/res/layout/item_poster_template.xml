<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/height_110px"
        android:layout_height="@dimen/height_196_px"
        app:srcCompat="@drawable/album_default_loading_pic"
        android:id="@+id/iPosterStyle_iv"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="@dimen/height_110px"
        android:layout_height="@dimen/height_196_px"
        app:srcCompat="@drawable/xuankuang_selected"
        android:id="@+id/iPosterStyle_selected_iv"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>
</FrameLayout>