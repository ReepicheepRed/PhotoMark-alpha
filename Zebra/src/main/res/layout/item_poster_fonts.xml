<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:paddingRight="@dimen/height_28px"
    android:paddingLeft="@dimen/height_42px"
    android:paddingTop="@dimen/margin_30px"
    android:paddingBottom="@dimen/margin_30px"
    android:id="@+id/iPoster_rl"
    tools:context="com.zebra.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/zitiliebiao_icon_xuanzhong_2x"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iPoster_token_iv"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:text="                         "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iPoster_token_iv"
        android:layout_toEndOf="@+id/iPoster_token_iv"
        android:id="@+id/iPoster_font_tv"
        android:textColor="@color/text_3_c"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/height_44_px"
        android:maxLines="1"
        android:ellipsize="end"/>

    <Button
        android:text="@string/download"
        android:layout_width="@dimen/height_100px"
        android:layout_height="@dimen/height_44_px"
        android:id="@+id/iPoster_download_btn"
        android:background="@drawable/xiazai_btn_2x"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size_26px"
        android:visibility="invisible"
        tools:visibility="visible"/>
</RelativeLayout>