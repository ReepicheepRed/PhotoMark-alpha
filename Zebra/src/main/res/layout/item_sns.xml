<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/xingming_icon"
        android:id="@+id/sns_icon"
        android:layout_marginLeft="@dimen/height_28px"
        android:layout_marginRight="@dimen/margin_26px"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_26px"
        android:layout_marginTop="@dimen/margin_26px" />

    <TextView
        android:text="                      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sns_icon"
        android:layout_toEndOf="@+id/sns_icon"
        android:id="@+id/sns_title"
        android:textColor="@color/text_3_c"
        android:textSize="@dimen/txt_size_32px"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_jinru"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView3"
        android:padding="@dimen/height_28px"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis_1"
        android:background="@color/divider_ea_c"
        android:layout_below="@+id/sns_icon"
        android:layout_toRightOf="@+id/sns_icon" />

    <TextView
        android:text="                "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sns_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />
</RelativeLayout>